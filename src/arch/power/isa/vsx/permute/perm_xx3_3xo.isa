format IntArithOp {                         
    10: xxpermdi({{
        int t1 = (DM >> 1) & 0x1;
        int t2 = DM & 0x1;
        VSt_ud[1] = VSa_ud[1 - t1];
        VSt_ud[0] = VSb_ud[1 - t2];
    }});

    2: xxsldwi({{
        uint32_t source[8];
        for(int i = 0; i < 4; i++)
            source[i] = VSb_uw[i];
        for(int i = 0; i < 4; i++)
            source[i + 4] = VSa_uw[i];
        for(int i = 0; i < 4; i++)
            VSt_uw[3 - i] = source[7 - (i + SHW)];
    }});
}
